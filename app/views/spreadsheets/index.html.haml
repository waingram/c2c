- model_class = Spreadsheet
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @spreadsheets.each do |spreadsheet|
      %tr
        %td= link_to spreadsheet.id, spreadsheet_path(spreadsheet)
        %td=l spreadsheet.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_spreadsheet_path(spreadsheet), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), spreadsheet_path(spreadsheet), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_spreadsheet_path, :class => 'btn btn-primary'
