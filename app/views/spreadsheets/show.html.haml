- model_class = Spreadsheet
.page-header
  %h1=t '.title', :default => model_class.model_name.human


.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), spreadsheets_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_spreadsheet_path(@spreadsheet), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), spreadsheet_path(@spreadsheet), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
